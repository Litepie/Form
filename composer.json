{
    "name": "litepie/form",
    "description": "A comprehensive Laravel form builder package with advanced features, caching, and modern design patterns",
    "type": "library",
    "keywords": [
        "laravel",
        "form",
        "form-builder",
        "bootstrap",
        "tailwind",
        "validation",
        "ui",
        "components",
        "form-container",
        "caching",
        "performance",
        "accessibility"
    ],
    "homepage": "https://github.com/litepie/form",
    "readme": "readme.md",
    "license": "MIT",
    "authors": [
        {
            "name": "Litepie Development Team",
            "email": "dev@litepie.com",
            "homepage": "https://litepie.com"
        }
    ],
    "support": {
        "issues": "https://github.com/litepie/form/issues",
        "source": "https://github.com/litepie/form",
        "docs": "https://github.com/litepie/form/tree/main/doc",
        "email": "support@litepie.com"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/litepie"
        }
    ],
    "require": {
        "php": "^8.2|^8.3",
        "laravel/framework": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/validation": "^11.0|^12.0",
        "illuminate/view": "^11.0|^12.0",
        "illuminate/cache": "^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0",
        "mockery/mockery": "^1.6",
        "laravel/pint": "^1.0",
        "nunomaduro/larastan": "^2.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Litepie\\Form\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Litepie\\Form\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage",
        "test:filter": "vendor/bin/phpunit --filter",
        "format": "vendor/bin/pint",
        "format:check": "vendor/bin/pint --test",
        "analyse": "vendor/bin/phpstan analyse",
        "analyse:baseline": "vendor/bin/phpstan analyse --generate-baseline",
        "ci": [
            "@format:check",
            "@analyse",
            "@test"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Litepie\\Form\\FormServiceProvider"
            ],
            "aliases": {
                "Form": "Litepie\\Form\\Facades\\Form"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

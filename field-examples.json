  "validationPatterns": {
    "text": [
      "required|string|max:255",
      "required|string|min:3|max:100",
      "nullable|string|max:500",
      "required|alpha",
      "required|alpha_dash"
    ],
    "email": [
      "required|email",
      "required|email|unique:users,email",
      "nullable|email",
      "required|email|confirmed"
    ],
    "password": [
      "required|string|min:8",
      "required|min:8|confirmed",
      "required|min:8|regex:/^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d).+$/",
      "nullable|min:8"
    ],
    "number": [
      "required|numeric",
      "required|integer|min:0",
      "required|numeric|min:0|max:100",
      "nullable|numeric",
      "required|integer|between:1,100"
    ],
    "date": [
      "required|date",
      "required|date|after:today",
      "required|date|before:today",
      "required|date|after_or_equal:start_date",
      "nullable|date"
    ],
    "file": [
      "required|file|max:10240",
      "required|file|mimes:pdf,doc,docx|max:5120",
      "required|image|max:2048",
      "nullable|file|mimes:jpg,png,pdf"
    ],
    "select": [
      "required|in:option1,option2,option3",
      "nullable|in:value1,value2",
      "required|exists:table,column"
    ],
    "checkbox": [
      "required|accepted",
      "nullable|boolean",
      "required|array",
      "required|array|min:1"
    ]
  },
  "conditionalVisibility": {
    "description": "Examples of conditional field visibility",
    "patterns": [
      {
        "condition": "show_if",
        "description": "Show field when another field has specific value",
        "example": {
          "name": "company_name",
          "type": "text",
          "show_if": "account_type:business"
        }
      },
      {
        "condition": "hide_if",
        "description": "Hide field when another field has specific value",
        "example": {
          "name": "student_id",
          "type": "text",
          "hide_if": "user_type:staff"
        }
      },
      {
        "condition": "permission",
        "description": "Show only to users with specific permission",
        "example": {
          "name": "salary",
          "type": "number",
          "permission": "view-salary"
        }
      },
      {
        "condition": "roles",
        "description": "Show only to users with specific roles",
        "example": {
          "name": "admin_notes",
          "type": "textarea",
          "roles": ["admin", "moderator"]
        }
      }
    ]
  }
